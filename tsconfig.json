{
    "compilerOptions": {
      "target": "ES2021",
      "lib": ["ES2021", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowJs": false,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noEmit": false,
      "baseUrl": "./src",
      "paths": { "@/*": ["*"] }
    },
    "include": ["src"]
}